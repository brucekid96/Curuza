<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Products">

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rcv_product"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true" />

  <com.getbase.floatingactionbutton.FloatingActionsMenu
      android:id="@+id/float_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentBottom="true"
      android:layout_margin="15dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:contentDescription="TODO"
      app:fab_colorNormal="@color/colorPrimary"
      app:fab_labelStyle="@style/custom_fab"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:srcCompat="@drawable/ic_baseline_add_24_white">

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_article_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorPrimary"
        app:fab_colorNormal="@color/colorWhite"
        app:fab_colorPressed="#CC0548"
        app:fab_labelStyle="@style/custom_fab"
        app:fab_size="mini"
        app:fab_title="Add article" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/sell_article_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorPrimary"
        app:fab_colorNormal="@color/colorWhite"
        app:fab_colorPressed="#CC0548"
        app:fab_labelStyle="@style/custom_fab"
        app:fab_size="mini"
        app:fab_title="Sell article"
        app:srcCompat="@drawable/ic_baseline_remove_shopping_cart_24" />

  </com.getbase.floatingactionbutton.FloatingActionsMenu>



</androidx.constraintlayout.widget.ConstraintLayout>