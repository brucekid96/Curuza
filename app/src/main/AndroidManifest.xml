<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.curuza">


    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".domain.CuruzaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Curuza">
        <activity
            android:name=".domain.MainActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name"
            android:theme="@style/Theme.Curuza.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".domain.Products"
            />
        <activity android:name=".domain.DocumentsActivity"/>
        <activity android:name=".domain.ShareApp"/>
        <activity android:name=".domain.SettingsActivity"/>
        <activity android:name=".domain.HelpActivity"/>
        <activity android:name=".domain.QuestionsActivity"/>
        <activity android:name=".domain.RapportActivity"/>
        <activity android:name=".domain.AddArticle"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".domain.Products"/>
        <activity android:name=".domain.SellArticleActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.Products"/>
        <activity android:name=".domain.ArticleDetails"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.Products"/>
        <activity android:name=".domain.SellArticleDetails"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".domain.SellArticleActivity"/>
        <activity android:name=".domain.StockActivity"/>
        <activity android:name=".domain.StockDetail"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.StockActivity"/>
        <activity android:name=".domain.EnterMovementDetail"/>
        <activity android:name=".domain.SellMovementDetail"/>
        <activity android:name=".domain.CreditActivity"/>
        <activity android:name=".domain.AddCreditActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.CreditActivity"/>
        <activity android:name=".domain.CreditDetailActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.CreditActivity"/>
        <activity android:name=".domain.DepenseActivity"/>
        <activity android:name=".domain.AddDepenseActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.DepenseActivity"/>
        <activity android:name=".domain.DepenseDetailActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.DepenseActivity"/>
        <activity android:name=".domain.FournisseurActivity"/>
        <activity android:name=".domain.AddFournisseurActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.FournisseurActivity"/>
        <activity android:name=".domain.FournisseurDetailActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.FournisseurActivity"/>
        <activity android:name=".domain.ClientActivity"/>
        <activity android:name=".domain.AddClientActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.ClientActivity"/>
        <activity android:name=".domain.ClientDetailActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTop"
            android:parentActivityName=".domain.ClientActivity"/>


    </application>

</manifest>